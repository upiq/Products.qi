<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/general/macros/master"
      i18n:domain="Products.qi">
    <head metal:fill-slot="javascript_head_slot">
        <script type="text/javascript" src="++resource++forumutils.js">

        </script>
    </head>
    <body metal:fill-slot="main">
        <tal:errors define="errors view/getErrors" condition="errors">
            <div class="error">
                <h3>The following errors occured</h3>
                <ul>
                    <li tal:repeat="error errors" tal:content="error" />
                </ul>
            </div>
        </tal:errors>
        <form method="POST" enctype="multipart/form-data">
        <fieldset>
            <label for="threadtitle">Title</label><br/>
            <input type="text" class="threadtitle" style="width:625px;" name="threadtitle" /> <br />
            <label for="postbody">Post text</label> <br />
            <textarea class="body" name="postbody" style="width:625px;height:250px;"></textarea> <br />
            <label for="attachments">Attachments</label>
            <div id="attachments">
            </div>
            <input type="button" value="Add attachment" onclick="addattachment()"/><br />
            <input name="post" type="submit" value="Post thread" />
        </fieldset>
        </form>
    </body>
</html>