<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/general/macros/master"
      i18n:domain="Products.qi">
<head>
</head>

<body>
<div metal:fill-slot="main"
    tal:define="name string:name;
                topics view/getTopics;
                baseErrors python:view.getError('base')">

    <table tal:condition="python:len(topics)>0" class="listing">


        
        <tal:topics repeat="topic topics">
        <tr>
            <th colspan="4" tal:content="topic/name">topic/name</th>
			<th>
				<form
					action="Edit_Topic.html">
				<input type="hidden" name="topicid" tal:attributes="value topic/id" />
				<input type="submit" class="context"
                	name="ModifyItem" 
                	value="edit" />
				</form>
			</th>
        </tr>
		<tal:hasnomeasures condition="python:len(view.getMeasures(topic))==0">
			<tr>
				<td colspan="5">
					No Measures in this topic.
				</td>
			</tr>
		</tal:hasnomeasures>
        <tal:hasmeasures condition="python:len(view.getMeasures(topic))!=0">
			<tr>
	            <th>Measure name</th>
	            <th>Active</th>
	            <th>Start Date</th>
	            <th>End Date</th>
	            <th>Goal</th>
            
	        </tr>
            
	        <tal:measures tal:define="rows python:view.getMeasures(topic)">
	            <tr tal:repeat="measure rows">
	                <td tal:content="measure/measure/name">name</td>
	                <td tal:content="measure/active">active</td>
	                <td tal:content="measure/startdate">start date</td>
	                <td tal:content="measure/enddate">end date</td>
	                <td tal:content="measure/goal">goal</td>
	            </tr>
	        </tal:measures>
        </tal:hasmeasures>
        </tal:topics>
    </table>
    <div tal:condition="baseErrors" class="error">
        <h3>The addition failed see reasons below</h3>
    </div>
    
    <tal:generalErrors condition="baseErrors" repeat="err baseErrors">
        <div class="error" tal:content="err">
            General error
        </div>
    </tal:generalErrors>
    



<form
    action='.'
    tal:attributes="action view/url"
  	method="post"
  	id="createtopic">

	<fieldset id="upload">


        <div class="field"
 			tal:define="localname name;
 			            errors python:view.getError(localname);
   			            localvalue python:request.get(localname, '')"
 			tal:attributes="class python:errors and 'field error' or 'field'">


 			<label i18n:translate="label_uploadtype_name"
   				tal:attributes="for localname">New Topic</label>

            <div><tal:errors repeat="error errors">
                <div tal:content="error">Validation error output</div>
            </tal:errors></div>

			<input type="text"
   				tal:attributes="name localname;
   								id localname;
   								value localvalue"
   	        />
        </div>

		<div class="formControls">

			<input class="context"
   				type="submit"
   				name="add"
   				value="Add"
   				/>
   	    </div>

	</fieldset>

</form>

</div>
</body>
</html>
