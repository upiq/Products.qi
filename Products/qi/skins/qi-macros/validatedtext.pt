<div metal:define-macro="validatedtext">
	<tal:wrapper define="errors python:view.getError(inputkey);
						 fieldtext fieldtext | inputkey;
						 required required | False;
						 description description | string:;
						 value value | python:view.request.form.get(inputkey,'');
						 islargetext islargetext | python:False">
						 
					<div tal:attributes="class python:len(errors>0) and 'error field' or 'field'">
						<div class="FieldTitle">
							<span class="FieldTitle" tal:content="FieldTitle">
							</span>
							<span class="required" tal:condition="required">
								(required)
							</span>
						</div>
						<p class="description" tal:content="description">
							
						</p>
						<div tal:condition="python:len(errors)>0">
							<tal:errors repeat="error errors">
								<div tal:content="error">
								</div>
							</tal:errors>
						</div>
						<tal:oneline condition="not:islargetext">
							<input 	
								type="text"
								name="unnamed"
								value=""
								tal:attributes="
									name inputkey;
									value value;"
								/>
						</tal:oneline>
						<tal:multiline condition="islargetext">
							<textarea width="50" height="5" tal:attributes="name inputkey" tal:content="value">
								this represents a text area
							</textarea>
						</tal:multiline>
					</div>
	</tal:wrapper>
</div>
