<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/general/macros/master"
      i18n:domain="Products.qi">
<div metal:fill-slot="main">

	<h2 tal:content="view/dblist/listname">
	</h2>
	<a href="showlistmembers?listid=number" 
	    tal:attributes="href python:'showlistmembers?listid=%s'%view.dblist.id">
	    show list members
    </a>
	<div class="onegroup">
	    
		<form method="post" action="." tal:attributes="action view/url">
			<input type="hidden" name="listid" tal:attributes="value view/dblist/id" />
		<table><tr>
		<td>
			<h4 class="formhead">
				Users currently on <listname tal:replace="view/dblist/listname" />
			</h4>
			<select multiple="true" class="membership" name="curmembers">
				<tal:existingusers repeat="user view/curmembers">
					<option 
						tal:content="python:'%s (%s)'%(user.getProperty('fullname'),user.getProperty('email'))"
						tal:attributes="value python:user.getUserId()">
						example user
					</option>
				</tal:existingusers>
			</select>
		</td>
	
		<td>
			<input type="submit" name="removemembers" value=">>>">
			<br />
			<input type="submit" name="addmembers" value="<<<">
		</td>
		<td>
			<h4 class="formhead">
				Users available to add.
			</h4>
			<select multiple="true" class="membership" name="availmembers">
				<tal:existingusers repeat="user view/availmembers">
					<option 
						tal:content="python:'%s (%s)'%(user.getProperty('fullname'),user.getProperty('email'))"
						tal:attributes="value python:user.getUserId()">
						example user
					</option>
				</tal:existingusers>
			</select>
		</td>
	    </tr></table>
		</form>
	</div>

	<div class="onegroup">
		<form method="post" action="." tal:attributes="action view/url">
			<input type="hidden" name="listid" tal:attributes="value view/dblist/id">
		<table><tr>
		<td>
			<h4 class="formhead">
				Groups currently assigned to <listname tal:replace="view/dblist/listname" />
			</h4>
			<select multiple="true" class="membership" name="curgroups">
				<tal:groups repeat="group view/curgroups">
					<option tal:content="group" tal:attributes="value group"> example group</option>
				</tal:groups>
			</select>
		</td>
		<td>
			<input type="submit" name="removegroups" value=">>>">
			<br />
			<input type="submit" name="addgroups" value="<<<">
		
		</td>
		<td>
			<h4 class="formhead">
				Groups available to add
			</h4>
			<select multiple="true" class="membership" name="availgroups">
				<tal:groups repeat="group view/availgroups">
					<option tal:content="group" tal:attributes="value group"> example group</option>
				</tal:groups>
			</select>
		</td>
	    </tr></table>
	</form>
	</div>

	<div class="onegroup" tal:condition="python:len(view.allteams)>0">
		<form method="post" action="." tal:attributes="action view/url">
			<input type="hidden" name="listid" tal:attributes="value view/dblist/id">
		<table><tr>
		<td>
			<h4 class="formhead">
			    Teams currently assigned to <listname tal:replace="view/dblist/listname" />
			</h4>
			<select multiple="true" class="membership" name="curteams">
				<tal:teams repeat="team view/curteams">
					<option 
						tal:content="team/name" 
						tal:attributes="value team/id">
						some team
					</option>
				</tal:teams>
			</select>
		</td>
		<td>
			<input type="submit" name="removeteams" value=">>>">
			<br />
			<input type="submit" name="addteams" value="<<<">
		</td>
		<td>
			<h4 class="formhead">
				Teams available to add
			</h4>
			<select multiple="true" class="membership" name="availteams">
				<tal:teams repeat="team view/availteams">
					<option 
						tal:content="team/name" 
						tal:attributes="value team/id">
						some team
					</option>
				</tal:teams>
			</select>
			<br />
		</td>
	    </tr></table>
		</form>
	</div>
	<div class="onegroup">
		<form method="post" action="." tal:attributes="action view/url">
			<input type="hidden" name="listid" tal:attributes="value view/dblist/id">
		
		<div class="formcolumn">
			<h4 class="formhead">
				Update Description
			</h4>
			<textarea class="membership" name="description" tal:content="view/description">
				stuff goes here
			</textarea>
			<br />
		</div>
		<div class="formcolumn full">
			<h4 class="formhead">
				Additional Options
			</h4>
			<div class="checkboxgroup">
			<input tal:attributes="checked view/reply" type="checkbox" name="allowreplies" />
			<label>Allow Replies</label>
			<br />

			<input tal:attributes="checked view/subscribe" type="checkbox" name="allowsubscribe" />
			<label>Allow Self-Subscribers</label>
			</div>
			<br />
	
		</div><br />
		<input type="submit" name="updatesettings" class="bottom" value="Change Settings" />
		</form> <br />
		Back to: <a id="backlink" href='MailingLists.html' >Mailing Lists</a>
		
	</div>	
</div>
</html>