<span>
    <input type="hidden" value="" 
        tal:attributes="name python:'%s/%s/teams'%(context.getrow().id, context.id)"/>
    <select tal:define="current python:context.getTeams()" name="ROW/WIDGIT/teams" multiple="true"
        tal:attributes="name python:'%s/%s/teams'%(context.getrow().id, context.id);
            multiple context/multiteam;
            size python:context.multiteam and 6 or None;">
        <tal:teams  repeat="team context/possibleTeams">
            <option tal:attributes="value team/id; SELECTED python:team in current;" 
                tal:content="team/name" />
        </tal:teams>
    </select>
    <input type="hidden" value="" 
        tal:attributes="name python:'%s/%s/measures'%(context.getrow().id, context.id)"/>
    <select tal:define="current python:context.getMeasures()" name="ROW/WIDGIT/measures" multiple="true"
        tal:attributes="name python:'%s/%s/measures'%(context.getrow().id, context.id);
            multiple context/multimeasure;
            size python:context.multimeasure and 6 or None;">
        <tal:measures  repeat="measure context/possibleMeasures">
            <option tal:attributes="value python:context.getIdForMeasure(measure); selected python:measure in current;" 
                tal:content="measure/name" />
        </tal:measures>
    </select>
    <!--
    <select tal:define="current context/dates" name="ROW-WIDGIT-teams" multiple="true">
        <tal:teams  repeat="team context/parentTeams">
            <option tal:attributes="value team/id" tal:content="team/name" />
        </tal:teams>
    </select>
    -->
</span>
