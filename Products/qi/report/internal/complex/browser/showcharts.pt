<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/general/macros/master"
      i18n:domain="Products.qi">

      <tal:javascripts metal:fill-slot="javascript_head_slot">
      	<script type="text/javascript" src="++resource++amlineprint.js">

      	</script>
      </tal:javascripts>
      <tal:css metal:fill-slot="css_slot">
            <link rel="stylesheet" media="print" href="++resource++chartprint.css" />
            <link rel="stylesheet" media="screen" href="++resource++chartscreen.css" />
      </tal:css>

<div metal:fill-slot="main">
    <iframe name="cachezone" id="cachezone" src="about:blank" style="display:none" >
    </iframe>
    <h2 tal:content="context/title" />
<!--<link rel="stylesheet" type="text/css" href="qipages.css" />-->
    <fieldset name="javascriptcontrols" class="noprint">
        <legend for="javascriptcontrols">
            Chart tools
        </legend>
        <button onclick="doprint()" id="printbutton">
            Print page
        </button>
        <div id="waitdiv" style="display:None; font-size: 15pt;">
            Please wait <span id="percentdone">0</span>% of charts ready for printing.
        </div>
    </fieldset>
    <tal:rows repeat="row context/rows">
        <tal:display tal:content="structure row/displayblurb" />
    </tal:rows>
</div>
</html>