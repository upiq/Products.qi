<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/general/macros/master"
      i18n:domain="Products.qi">
      <tal:js metal:fill-slot="javascript_head_slot">
      <script type="text/javascript" src="++resource++ajaxadd.js">
      </script>
      </tal:js>
<div metal:fill-slot="main">
    <h2 tal:content="context/title" />
    <div id="addregion" style="display:None; position:fixed; left:0; right:0; top:0; bottom:0;
                        z-index:1000; padding-left:25%; padding-right:25%; padding-top:100px; padding-bottom:10px;
                        background-image:url('++resource++translucent.png');">
        <input type="hidden" id="modifiedrow" />
        <input type="hidden" id="rowurl" />
        <div style="width:100%; height:150px; background-color: #DDDDDD; border: solid black 8px; padding:10px;">
            Pick type to add:
            <select id="addedtype" style="margin-bottom:100px;">
                    <option value="datatable">Data Table</option>
                    <option value="annotations">Annotation Table</option>
                    <option value="smallmultiple">Small Multiple</option>
                    <option value="teamchart">Team Chart</option>
                    <option value="measurechart">Measure Chart</option>
                    <!--<option value="controlchart">Control Chart</option>-->
                    <option value="line">Horizontal Seperator</option>
                    <option value="title">Header</option>
                    <option value="paragraph">Paragraph</option>
                    <option value="googlemotion">Google Motion Chart</option>
            </select>
            <br />
            <input type="button" onclick="submitscreen()" value="submit"/>
            <input type="button" onclick="cancelscreen()" value="cancel" />
        </div>
    </div>
    <div class="chartholder design">
        <form method="POST" action="." tal:attributes="action view/url">
        <tal:rows repeat="row context/rows">
            <div class="chartrow design insertrow">
                <form method="POST">
                    <input type="hidden" name="rowid" tal:attributes="value row/id" />
                    <input type="hidden" name="insertbefore" tal:attributes="value row/rowindex" />
                    <input type="submit" value="insert row here" name="insert" />
                    <input type="submit" value="Move Up"  name="movedown" 
                        tal:condition="not:repeat/row/start" />
                    <input type="submit" value="Move Down" name="moveup" 
                        tal:condition="not:repeat/row/end" />
                </form>
                <div class="editedrow"  tal:content="structure row/editblurb" />
                
            </div>
        </tal:rows>
        <input type="submit" name="updateall" value="Update Settings" />
        </form>
        <form method="POST" action="." tal:attributes="action view/url">
            <input type="hidden" name="insertbefore" value="-1" />
            <input type="submit" value="insert row here" name="insert" />
        </form>
    </div>
</div>
</html>
