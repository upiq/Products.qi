
<div style="display:inline-block" tal:attributes="id context/id">
    <table class="datatable">
        <tr tal:repeat="level context/keyheight">
            <td colspan="2" />
            <tal:columns repeat="column context/columnkeys">
                <th tal:content="python: column[level].name" />
            </tal:columns>
        </tr>
        
        <tal:rows repeat="row context/rowkeys">
        <tr>
            
            <tal:keys repeat="key row">
                <th tal:content="key/name" />
            </tal:keys>
            <tal:data repeat="column context/columnkeys">
                <td tal:content="python:context.valuebykeys(column,row)">
                </td>
            </tal:data>
        </tr>
        </tal:rows>
        
    </table>
</div>