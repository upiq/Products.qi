<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:five="http://namespaces.zope.org/five"
    xmlns:browser="http://namespaces.zope.org/browser"
     >
     <five:registerClass
         class=".smallmultiple.SmallMultiple"
         meta_type="qi.smallmultiple"
         permission="cmf.ModifyPortalContent"
         addview=".smallmultiple.SmallMultiple"
         icon="chart_icon.png"
         />
    <browser:page
        name="settings.xml"
        for=".interfaces.ISmallMultiple"
        template="smallmultiplesettings.pt"
        permission="zope2.View"
        />
    <browser:page
        name="data.xml"
        for=".interfaces.ISmallMultiple"
        template="smallmultipledata.pt"
        permission="zope2.View"
        />
    <browser:page
        name="editblurb"
        for=".interfaces.ISmallMultiple"
        template="smallmultipleedit.pt"
        permission="cmf.ModifyPortalContent"
        />

</configure>