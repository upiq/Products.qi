<?xml version="1.0" encoding="UTF-8"?>
<chart 
      xmlns:tal="http://xml.zope.org/namespaces/tal">

	<series>
	    <tal:dates repeat="date context/getDates">
	        <value tal:attributes="xid date" tal:content="python:date.strftime('%m/%Y')" />
        </tal:dates>
        
	</series>
	<graphs>
	    
		<graph gid="data" >
		    <tal:data repeat="date view/getDataByDate">
	            <value tal:define="value python: view.getDataByDate()[date]"
	                 tal:attributes="xid date"
	                tal:content="value" tal:condition="python: value is not None" />
	        </tal:data>
		</graph>

	</graphs>
</chart>
