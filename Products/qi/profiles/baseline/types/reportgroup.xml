<?xml version="1.0"?>
<object name="qiproject"
   meta_type="Factory-based Type Information with dynamic views"
   i18n:domain="Products.qi" xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <property name="title" i18n:translate="">QI Report Group</property>
 <property name="description"
    i18n:translate="">A group of status reports</property>
 <property name="content_icon">++resource++qiproject_icon.png</property>
 <property name="content_meta_type">reportgroup</property>
 <property name="product"></property>
 <property name="factory">Products.qi.reports.ReportManager</property>
 <property name="immediate_view">@@edit</property>
 <!--this really only belongs to projects possibly turn off global_allow? -->
 <property name="global_allow">True</property>
 <property name="filter_content_types">False</property>
 <property name="allowed_content_types"/>
 <property name="allow_discussion">False</property>
 <property name="default_view">Report_List</property>
 <property name="default_view_fallback">False</property>
 <alias from="(Default)" to="(dynamic view)"/>
 <alias from="edit" to="@@edit"/>
 <alias from="z3view" to="@@view"/>
 
 <action title="View" action_id="view" category="object" condition_expr=""
    url_expr="string:${object_url}/" visible="True">
  <permission value="View"/>
 </action>
 <action title="Edit" action_id="edit" category="object" condition_expr=""
    url_expr="string:${object_url}/edit" visible="True">
  <permission value="Modify portal content"/>
 </action>
 <action title="Report List" action_id="Report_List" category="object" condition_expr=""
    url_expr="string:${object_url}/Report_List" visible="True">
  <permission value="View"/>
 </action>
 <action title="Add Report" action_id="Add_Report" category="object" condition_expr=""
    url_expr="string:${object_url}/Add_Report" visible="False">
  <permission value="AddReport"/>
 </action>
 <action title="Edit Report" action_id="Edit_Report" category="object" condition_expr=""
    url_expr="string:${object_url}/Edit_Report" visible="False">
  <permission value="AddReport"/>
 </action>
</object>
