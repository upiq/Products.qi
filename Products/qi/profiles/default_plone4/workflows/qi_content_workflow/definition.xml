<?xml version="1.0"?>
<dc-workflow workflow_id="qi_content_workflow"
             title="QI Teamspace content workflow"
             description="" state_variable="review_state"
             initial_state="private">
 <permission>Access contents information</permission>
 <permission>Modify portal content</permission>
 <permission>View</permission>
 <permission>Enter Data</permission>
 <state state_id="private" title="Private to owner">
  <exit-transition transition_id="publish"/>
  <exit-transition transition_id="restrict_to_subteam"/>
  <exit-transition transition_id="restrict_to_team"/>
  <exit-transition transition_id="retract"/>
  <exit-transition transition_id="show"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Enter Data" acquired="True">
   <permission-role>Owner</permission-role>
  </permission-map>
 </state>
 <state state_id="project_private"
        title="Restrict to Managers">
  <exit-transition transition_id="hide"/>
  <exit-transition transition_id="publish"/>
  <exit-transition transition_id="restrict_to_subteam"/>
  <exit-transition transition_id="restrict_to_team"/>
  <exit-transition transition_id="show"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reader</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Enter Data" acquired="True">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reader</permission-role>
  </permission-map>
 </state>
 <state state_id="published" title="Published">
  <exit-transition transition_id="hide"/>
  <exit-transition transition_id="restrict_to_subteam"/>
  <exit-transition transition_id="restrict_to_team"/>
  <exit-transition transition_id="retract"/>
  <exit-transition transition_id="show"/>
  <permission-map name="Access contents information"
                  acquired="True">
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="True">
  </permission-map>
  <permission-map name="View" acquired="True">
  </permission-map>
  <permission-map name="Enter Data" acquired="True">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>TeamViewer</permission-role>
   <permission-role>QIC</permission-role>
  </permission-map>
 </state>
 <state state_id="restrict_to_team"
        title="Restrict to Team Members">
  <exit-transition transition_id="hide"/>
  <exit-transition transition_id="publish"/>
  <exit-transition transition_id="restrict_to_subteam"/>
  <exit-transition transition_id="retract"/>
  <exit-transition transition_id="show"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>TeamViewer</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>TeamViewer</permission-role>
   <permission-role>Reader</permission-role>
  </permission-map>
  <permission-map name="Enter Data" acquired="True">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>TeamViewer</permission-role>
  </permission-map>
 </state>
 <state state_id="sub_team"
        title="Restrict to SubTeam Members">
  <exit-transition transition_id="hide"/>
  <exit-transition transition_id="publish"/>
  <exit-transition transition_id="show"/>
  <exit-transition transition_id="restrict_to_team"/>
  <exit-transition transition_id="retract"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>SubTeamViewer</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>SubTeamViewer</permission-role>
  </permission-map>
  <permission-map name="Enter Data" acquired="True">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>SubTeamViewer</permission-role>
  </permission-map>
 </state>
 <state state_id="visible"
        title="Restrict to Project Members">
  <exit-transition transition_id="hide"/>
  <exit-transition transition_id="publish"/>
  <exit-transition transition_id="restrict_to_subteam"/>
  <exit-transition transition_id="restrict_to_team"/>
  <exit-transition transition_id="retract"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>ProjectViewer</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Enter Data" acquired="True">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>TeamViewer</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>ProjectViewer</permission-role>
  </permission-map>
 </state>
 <transition transition_id="hide" title="Private to Owner"
             new_state="private" trigger="USER"
             before_script="" after_script="">
  <description>Make this item private to owner.</description>
  <action url="%(content_url)s/content_status_modify?workflow_action=hide"
          category="workflow">Make private to owner</action>
  <guard>
   <guard-permission>Modify portal content</guard-permission>
  </guard>
 </transition>
 <transition transition_id="publish"
             title="Member publishes content"
             new_state="published" trigger="USER"
             before_script="" after_script="">
  <description>Make this item visible to everyone.</description>
  <action url="%(content_url)s/content_status_modify?workflow_action=publish"
          category="workflow">Publish</action>
  <guard>
   <guard-permission>Modify portal content</guard-permission>
  </guard>
 </transition>
 <transition transition_id="restrict_to_subteam"
             title="Restrict to Sub Team Members"
             new_state="sub_team" trigger="USER"
             before_script="" after_script="">
  <description>Make this item visible only to team members.</description>
  <action url="%(content_url)s/content_status_modify?workflow_action=restrict_to_subteam"
          category="workflow">Restrict to subteam members</action>
  <guard>
   <guard-permission>Modify portal content</guard-permission>
   <guard-expression>python:hasattr(here,'isSubTeam') and here.isSubTeam()</guard-expression>
  </guard>
 </transition>
 <transition transition_id="restrict_to_team"
             title="Restrict to Team Members"
             new_state="restrict_to_team" trigger="USER"
             before_script="" after_script="">
  <description>Make this item visible only to team members.</description>
  <action url="%(content_url)s/content_status_modify?workflow_action=restrict_to_team"
          category="workflow">Restrict to team members</action>
  <guard>
   <guard-permission>Modify portal content</guard-permission>
   <guard-expression>python:hasattr(here,'isTeam') and here.isTeam()</guard-expression>
  </guard>
 </transition>
 <transition transition_id="retract"
             title="Restrict to Project Managers"
             new_state="project_private" trigger="USER"
             before_script="" after_script="">
  <description>Make this item visible only to project managers.</description>
  <action url="%(content_url)s/content_status_modify?workflow_action=retract"
          category="workflow">Restrict to project managers</action>
  <guard>
   <guard-permission>Modify portal content</guard-permission>
  </guard>
 </transition>
 <transition transition_id="show"
             title="Restrict to Project Members"
             new_state="visible" trigger="USER"
             before_script="" after_script="">
  <description>Make this item visible only to project members.</description>
  <action url="%(content_url)s/content_status_modify?workflow_action=show"
          category="workflow">Restrict to project members</action>
  <guard>
   <guard-permission>Modify portal content</guard-permission>
  </guard>
 </transition>
 <worklist worklist_id="reviewer_queue" title="">
  <description>Reviewer tasks</description>
  <action url="%(portal_url)s/search?review_state=pending"
          category="global">Pending (%(count)d)</action>
  <guard>
   <guard-permission>Review portal content</guard-permission>
  </guard>
  <match name="review_state" values="pending"/>
 </worklist>
 <variable variable_id="action" for_catalog="False"
           for_status="True" update_always="True">
  <description>The last transition</description>
  <default>
   
   <expression>transition/getId|nothing</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="actor" for_catalog="False"
           for_status="True" update_always="True">
  <description>The ID of the user who performed the last transition</description>
  <default>
   
   <expression>user/getId</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="comments" for_catalog="False"
           for_status="True" update_always="True">
  <description>Comments about the last transition</description>
  <default>
   
   <expression>python:state_change.kwargs.get('comment', '')</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="review_history" for_catalog="False"
           for_status="False" update_always="False">
  <description>Provides access to workflow history</description>
  <default>
   
   <expression>state_change/getHistory</expression>
  </default>
  <guard>
   <guard-permission>Request review</guard-permission>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </variable>
 <variable variable_id="time" for_catalog="False"
           for_status="True" update_always="True">
  <description>Time of the last transition</description>
  <default>
   
   <expression>state_change/getDateTime</expression>
  </default>
  <guard>
  </guard>
 </variable>
</dc-workflow>
