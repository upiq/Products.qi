<?xml version="1.0"?>
<object name="qiteam"
        meta_type="Dexterity FTI"
        i18n:domain="Products.qi"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n">

  <!-- Basic metadata -->
  <property name="title" i18n:translate="">QI Team</property>
  <property name="description" i18n:translate="">A team workspace within a QI project workspace.</property>
  <property name="content_icon">++resource++workspace.png</property>
  <property name="allow_discussion">False</property>
  <property name="global_allow">False</property>
  <property name="filter_content_types">True</property>
  <property name="allowed_content_types">
    <element value="Folder"/>
    <element value="Discussion Item"/>
    <element value="Document"/>
    <element value="Event"/>
    <element value="File"/>
    <element value="Image"/>
    <element value="Link"/>
    <element value="News Item"/>
    <element value="Topic"/>
    <element value="qisubteam"/>
  </property>

  <!-- schema interface -->
  <property name="schema">Products.qi.extranet.types.interfaces.ITeam</property>

  <!-- class used for content items -->
  <property name="klass">Products.qi.extranet.types.team.Team</property>

  <!-- add permission -->
  <property name="add_permission">Products.qi.AddTeam</property>

  <!-- enabled behaviors -->
  <property name="behaviors">
    <element value="plone.app.content.interfaces.INameFromTitle" />
    <element value="plone.app.dexterity.behaviors.metadata.ICategorization" />
    <element value="plone.app.referenceablebehavior.referenceable.IReferenceable" />
  </property>

  <!-- View information -->
  <property name="default_view">folder_listing</property>
  <property name="default_view_fallback">False</property>
  <property name="view_methods">
    <element value="view"/>
    <element value="folder_summary_view"/>
    <element value="folder_tabular_view"/>
    <element value="folder_listing"/>
  </property>

  <!-- Method aliases -->
  <alias from="(Default)" to="(dynamic view)"/>
  <alias from="edit" to="@@edit"/>
  <alias from="sharing" to="@@sharing"/>
  <alias from="view" to="(selected layout)"/>

  <!-- Actions -->
  <action title="View" action_id="view" category="object" condition_expr=""
          url_expr="string:${object_url}" visible="True">
    <permission value="View"/>
  </action>
  <action title="Edit" action_id="edit" category="object" condition_expr=""
          url_expr="string:${object_url}/edit" visible="True">
    <permission value="Modify portal content"/>
  </action>

</object>

