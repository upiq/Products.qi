<?xml version="1.0"?>
<object name="qi.Forum"
   meta_type="Factory-based Type Information with dynamic views"
   i18n:domain="Products.qi" xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <property name="title" i18n:translate="">Forum</property>
 <property name="description"
    i18n:translate="">Forum for discussing qi documents.</property>
 <property name="content_icon">++resource++qichart_icon.png</property>
 <property name="content_meta_type">qiforum</property>
 <property name="product"></property>
 <property name="factory">qi.Forum</property>
 <property name="add_view_expr">string:${folder_url}/+/qi.Forum</property>
 <property name="immediate_view">@@edit</property>
 <property name="global_allow">False</property>
 <property name="filter_content_types">True</property>
 <property name="allowed_content_types"/>
 <property name="allow_discussion">False</property>
 <property name="default_view">view</property>
 <property name="view_methods">
  <element value="view"/>
 </property>
 <property name="default_view_fallback">True</property>
 <alias from="(Default)" to="view"/>
 <action title="View" action_id="view" category="object" condition_expr=""
    url_expr="string:${object_url}" visible="True">
  <permission value="View"/>
 </action>
 <action title="Edit" action_id="edit" category="object" condition_expr=""
    url_expr="string:${object_url}/edit" visible="True">
  <permission value="Modify portal content"/>
 </action>
 <action title="View all attachments" action_id="files" category="object"
    condition_expr="" url_expr="string:${object_url}/files" visible="True">
  <permission value="View"/>
 </action>
</object>
