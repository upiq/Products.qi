<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:metal="http://xml.zope.org/namespaces/metal" xmlns:tal="http://xml.zope.org/namespaces/tal" xmlns:i18n="http://xml.zope.org/namespaces/i18n" metal:use-macro="context/general/macros/master" i18n:domain="Products.qi">
	<head>
		<title></title>
	</head>
	<body>
		<div metal:fill-slot="main" tal:define="value view/value">
			<h3>
				Changes to recorded value
			</h3>
			<table class="listing">
				<tr>
					<th colspan="2">
						Value changed
					</th>
				</tr>
				<tr>
					<td>
						Team
					</td>
					<td tal:condition="value/team" tal:content="value/team/name"></td>
				</tr>
				<tr>
					<td>
						Measure
					</td>
					<td tal:content="value/measure/name"></td>
				</tr>
				<tr>
					<td>
						Reporting Period
					</td>
					<td tal:content="python:value.itemdate"></td>
				</tr>
<!-->				<tr>
					<td>
						Recording Date
					</td>
					<td tal:content="python:value.reportdate"></td>
				</tr>
-->			</table>
			<table class="listing">
				<tr>
					<th>
						Value
					</th>
					<th>
						Annotation
					</th>
					<th>
						Reported
					</th>
					<th>
						Changed
					</th>
					<th>
						Source
					</th>
				</tr>
				<tr>
					<td tal:content="value/value" />
					<td tal:content="value/annotation" />
					<td tal:content="value/reportdate" />
					<td>Current</td>
					<td tal:condition="value/tfile"> 
						<a tal:content="value/tfile/displayname" 
							tal:attributes="href python:view.link(value.tfile)" />
					</td>
					<td tal:condition="not:value/tfile">
						no file
					</td>
				</tr>
				<tal:changes repeat="change view/history">
					<tr>
						<td tal:content="change/oldvalue" />
						<td tal:content="change/oldannotation" />
						<td tal:content="change/reportdate" />
						<td tal:content="python:view.niceifydt(change.changedon)" />
						<td tal:condition="change/tfile"> 
							<a tal:content="change/tfile/displayname" 
								tal:attributes="href python:view.link(change.tfile)" />
						</td>
						<td tal:condition="not:change/tfile">
							no file
						</td>
					</tr>
				</tal:changes>
			</table>
		</div>
	</body>
</html>
