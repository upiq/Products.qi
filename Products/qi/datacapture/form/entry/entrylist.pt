<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="qiteamspace">
<body>

<div metal:fill-slot="main">
	

	<tal:haschildren condition="view/hasChildren">
	    <h3>Select a practice:</h3>
	    <ul>
	    <tal:children tal:repeat="child view/children" >
    	    <li tal:condition="python: child!=context and view.canEnterData(child)">
    	        <a href="child/url" tal:attributes="href python:'%s/dataentry.html'%child.absolute_url()"
    	            tal:content="child/title" />
            </li>
        </tal:children>
        </ul>
    </tal:haschildren>
	<tal:nochildren condition="not:view/hasChildren">
    	<tal:s 
    		condition="python: len(view.getForms())==1"
    		define="list python:view.getForms()"
    		content="python: view.doRedirect('measuredates.html?inputform=%s'%list[0].id)"
		
    	/>
        <h3>Select form to enter data</h3>
    	<fieldset>
    	<legend class="discreet">
        	  Forms available for <tal:projname content="context/title" />
    	</legend>
        <table cellpadding="2" tal:condition="python: len(view.getForms())>1" >
    		<tr tal:repeat="list python:view.getForms()">
			
    			<td colspan="2"><a tal:attributes="href python:'measuredates.html?inputform=%s'%list.id" tal:content="list/name">bleh</a></td>
			
    			<!--<td><input type="submit" value="Edit" /> </td>-->
    		</tr>
        </table>



    	<span tal:condition="python: len(view.getForms())==0">No forms matched this project</span>
	
    	</fieldset>
    	<tal:addnew condition="view/checkProjectManager">
    		<form tal:attributes="action python:view.context.getProject().absolute_url() + '/DesignForm'" method="post">
    			<input type="submit" value="Add New Form" />
    		</form>
    	</tal:addnew>
    </tal:nochildren>



</div>

</body>
</html>
