<div metal:define-macro="calendar">
	<div style="display: none;">
		<table class="calendar">
			<tr class="yearrow" name="yearrow">
				<th>
					<a href="javascript:change(this, -12)">&lt;&lt;</a>
				</th>
				<th colspan="5" name="yearslot">
					Current year
				</th>
				<th>
					<a href="javascript:change(this, 12)">&gt;&gt;</a>
				</th>
			</tr>
			<tr name="monthrow" class="monthrow">
				<th>
					<a href="javascript:change(this, -1)">&lt;&lt;</a>
				</th>
				<th colspan="5" name="yearslot">
					Current year
				</th>
				<th>
					<a href="javascript:change(this, 1)">&gt;&gt;</a>
				</th>
			</tr>
			<tr>
				<th>Sun</th>
				<th>Mon</th>
				<th>Tue</th>
				<th>Wed</th>
				<th>Thu</th>
				<th>Fri</th>
				<th>Sat</th>
			</tr>
			<tal:rows repeat="row python:range(6)">
				<tr tal:attributes="name python:'row-%s'%row" >
					<tal:cells repeat="day python:range(7)">
						<td tal:attributes="name day">
							x
						</td>
					</tal:cells>
				</tr>
			</tal:rows>
		</table>
	</div>
	<div class="inputholder">
		<input type="text" name="whatever" value="date" onclick="load" />
	</div>
</div>
