<div metal:define-macro="errorlist">
	<tal:errorlist define="baseErrors python:view.getError('base')">
		<div tal:condition="view/hasErrors" class="error">
	        <h3>The addition failed see reasons below</h3>
	    </div>
    
	    <tal:generalErrors condition="baseErrors" repeat="err baseErrors">
	        <div class="error" tal:content="err">
	            General error
	        </div>
	    </tal:generalErrors>
	</tal:errorlist>
</div>